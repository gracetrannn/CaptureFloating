<Window x:Class="WebcamApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam Viewer" Height="300" Width="400" WindowStyle="None" Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" AllowsTransparency="True" Background="Transparent">
    <Grid Background="White" Margin="10">
        <Button Content="X" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,0,10,0" Click="CloseButton_Click"/>
        <ComboBox Name="CameraSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10"/>
        <Image Name="VideoView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10,40,10,10"/>
    </Grid>
</Window>